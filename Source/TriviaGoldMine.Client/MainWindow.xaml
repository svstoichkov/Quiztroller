<Window x:Class="TriviaGoldMine.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:views="clr-namespace:TriviaGoldMine.Client.Views"
        mc:Ignorable="d"
        Title="Trivia Goldmine"
        WindowState="Maximized"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="26"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
        DataContext="{Binding Source={StaticResource ViewModelLocator}, Path=MainViewModel}">
    <materialDesign:DialogHost x:Name="dialogHost"
                               Identifier="RootDialog"
                               IsTabStop="False">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <materialDesign:ColorZone Mode="PrimaryDark"
                                      Grid.Row="0"
                                      Grid.Column="0"
                                      Grid.ColumnSpan="2"
                                      Panel.ZIndex="1"
                                      Padding="16"
                                      IsTabStop="False"
                                      materialDesign:ShadowAssist.ShadowDepth="Depth3">
                <Grid>
                    <Image Source="trivia Goldmine.png"
                           Width="150"
                           HorizontalAlignment="Left" />
                    <Button Style="{StaticResource MaterialDesignRaisedAccentButton}"
                            Content="Scoreboard"
                            HorizontalAlignment="Right"
                            Margin="0,0,50,0" />
                </Grid>
            </materialDesign:ColorZone>
            <views:Mp3Player Grid.Row="1"
                             Grid.Column="0"
                             DataContext="{Binding Source={StaticResource ViewModelLocator}, Path=Mp3PlayerViewModel}"
                             Margin="10" />
            <views:PowerPointController Grid.Row="1"
                             Grid.Column="1"
                             DataContext="{Binding Source={StaticResource ViewModelLocator}, Path=PowerPointControllerViewModel}"
                             Margin="10" />
            <materialDesign:Card Grid.Row="2"
                                 Grid.Column="0"
                                 Grid.ColumnSpan="2"
                                 Margin="10,0,10,10"
                                 AllowDrop="True">
                <StackPanel Orientation="Vertical">
                    <materialDesign:ColorZone Mode="PrimaryDark"
                                              Padding="8">
                        <TextBlock Text="Questions"
                                   TextWrapping="WrapWithOverflow"
                                   HorizontalAlignment="Center" />
                    </materialDesign:ColorZone>
                    <Grid Margin="20">
                        <DocumentViewer x:Name="documentViewer"/>
                    </Grid>
                </StackPanel>
            </materialDesign:Card>
        </Grid>
    </materialDesign:DialogHost>
</Window>
