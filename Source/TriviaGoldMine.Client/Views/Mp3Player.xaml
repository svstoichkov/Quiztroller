<materialDesign:Card x:Class="TriviaGoldMine.Client.Views.Mp3Player"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                     x:Name="mp3Player"
                     AllowDrop="True"
                     Drop="Mp3Player_OnDrop"
                     DragOver="Mp3Player_OnDragOver">
    <StackPanel Orientation="Vertical">
        <materialDesign:ColorZone Mode="Accent"
                                  Padding="8">
            <TextBlock Text="{Binding CurrentSong, Converter={StaticResource PathToFileNameConverter}}" HorizontalAlignment="Center"/>
        </materialDesign:ColorZone>
        <StackPanel Orientation="Horizontal"
                    Margin="10">
            <materialDesign:PopupBox IsEnabled="{Binding PopUpEnabled}">
                <materialDesign:PopupBox.ToggleContent>
                    <materialDesign:PackIcon Kind="PlaylistPlay" Width="30" Height="30"/>
                </materialDesign:PopupBox.ToggleContent>
                <DataGrid ItemsSource="{Binding Songs}"
                          HeadersVisibility="None"
                          SelectedItem="{Binding CurrentSong}"
                          AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding ., Converter={StaticResource PathToFileNameConverter}}" />
                    </DataGrid.Columns>
                </DataGrid>
            </materialDesign:PopupBox>
            <Button Style="{StaticResource MaterialDesignFlatButton}"
                    Command="{Binding Previous}">
                <materialDesign:PackIcon Kind="SkipPrevious"
                                         Width="24"
                                         Height="24" />
            </Button>
            <Button Style="{StaticResource MaterialDesignFlatButton}"
                    Command="{Binding Play}">
                <materialDesign:PackIcon Kind="Play"
                                         Width="24"
                                         Height="24" />
            </Button>
            <Button Style="{StaticResource MaterialDesignFlatButton}"
                    Command="{Binding Pause}">
                <materialDesign:PackIcon Kind="Pause"
                                         Width="24"
                                         Height="24" />
            </Button>
            <Button Style="{StaticResource MaterialDesignFlatButton}"
                    Command="{Binding Next}">
                <materialDesign:PackIcon Kind="SkipNext"
                                         Width="24"
                                         Height="24" />
            </Button>
        </StackPanel>
    </StackPanel>
</materialDesign:Card>
